{
    "name": "polopolaw/laravel-hybrid-telegram",
    "description": "Super fast package for Laravel to build Telegram bots powered by Go",
    "keywords": [
        "telegram",
        "laravel",
        "hybridgram",
        "php",
        "golang"
    ],
    "type": "library",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey Gurkovskii",
            "email": "polopolaw@gmail.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "laravel/prompts": "^0.3.7",
        "laravel/serializable-closure": "^2.0",
        "nyholm/psr7": "^1.8",
        "php-http/multipart-stream-builder": "^1.4",
        "symfony/console": "^6.0|^7.0",
        "symfony/process": "^6.4|^7.0",
        "phptg/bot-api": "dev-master"
    },
    "require-dev": {
        "laravel/framework": "^11.0",
        "laravel/pint": "^1.25",
        "marcocesarato/php-conventional-changelog": "^1.17",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^4.1"
    },
    "autoload": {
        "psr-4": {
            "HybridGram\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/hook"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        },
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "TelegramRouter": "HybridGram\\Facades\\TelegramRouter"
            },
            "providers": [
                "HybridGram\\Providers\\TelegramServiceProvider"
            ]
        }
    },
    "scripts": {
        "test:coverage": "pest --coverage --colors=always",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "lint": [
            "@php vendor/bin/pint --ansi"
        ],
        "test": [
            "@clear",
            "@php vendor/bin/pest"
        ],
        "changelog": "conventional-changelog",
        "release": "conventional-changelog --commit",
        "release:patch": "conventional-changelog --patch --commit",
        "release:minor": "conventional-changelog --minor --commit",
        "release:major": "conventional-changelog --major --commit"
    }
}
